{
  "dataset_info": {
    "name": "MSVD",
    "description": "Microsoft Research Video Description Corpus",
    "train_videos": 1450,
    "test_videos": 100,
    "feature_format": "npy",
    "feature_dim": 4096
  },
  
  "data_parameters": {
    "data_root": "E:/imgsynth/MLDS_hw2_1_data",
    "max_frames": 80,
    "max_caption_length": 20,
    "min_word_count": 2,
    "analyze_dataset": true
