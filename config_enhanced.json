{
  "description": "Enhanced configuration to beat BLEU@1 = 0.6 baseline with focused improvements",
  
  "baseline_info": {
    "target_bleu1": 0.6,
    "goal": "Beat baseline with minimal but effective changes",
    "enhancements": [
      "Coverage attention mechanism",
      "Better weight initialization", 
      "Label smoothing (0.1)",
      "Enhanced beam search with coverage penalty",
      "Improved regularization"
    ]
  },
  
  "data_parameters": {
    "data_root": "E:/imgsynth/MLDS_hw2_1_data",
    "max_frames": 80,
    "max_caption_length": 20,
    "vocab_min_count": 3,
    "analyze_dataset": true
  },
  
  "model_parameters": {
    "model_type": "enhanced",
    "video_feature_dim": 4096,
    "hidden_dim": 256,
    "embedding_dim": 256,
    "num_layers": 2,
    "dropout": 0.3,
    "attention_dim": 256
  },
  
  "training_parameters": {
    "batch_size": 32,
    "num_epochs": 200,
    "learning_rate": 0.001,
    "weight_decay": 1e-5,
    "grad_clip": 5.0,
    "num_workers": 4,
    "use_scheduler": false
  },
  
  "advanced_features": {
    "use_scheduled_sampling": true,
    "initial_sampling_prob": 0.0,
    "final_sampling_prob": 0.25,
    "sampling_schedule_epochs": 100,
    "exposure_bias_solution": "scheduled_sampling",
    "label_smoothing": 0.1,
    "coverage_penalty": 0.2
  },
  
  "beam_search": {
    "beam_size": 5,
    "length_penalty": 1.0,
    "coverage_penalty": 0.2,
    "use_for_evaluation": true
  },
  
  "evaluation": {
    "eval_every": 10,
    "eval_samples": 200,
    "target_metrics": {
      "BLEU-1": 0.60,
      "BLEU-4": 0.25,
      "METEOR": 0.28,
      "CIDEr": 0.45
    }
  },
  
  "logging": {
    "save_dir": "./checkpoints_enhanced",
    "save_every": 10,
    "keep_checkpoints": 10,
    "log_attention_weights": true
  },
  
  "hardware_optimization": {
    "pin_memory": true,
    "non_blocking": true,
    "mixed_precision": false
  }
}